<!DOCTYPE html>
<%- include('partials/dashboardHead') %> 
<body>
    <div class="contenedorDashboard">
        <%- include('partials/navMenu') %> 
        <div class="contenedorContenido">
            <h2>Editar modulo <%= moduleData.nombre_modulo%></h2>
            <div class="contenedorForm">
                <form action="/dashboard/module-edit/<%=moduleData.id%>" method="POST">
                        <input type="text" name="nombreModulo" placeholder="Nombre" value="<%= moduleData.nombre_modulo%>">
                    <div>
                        <input value="<%= moduleData.fecha_inicio%>" placeholder="Fecha de inicio" name="fechaInicioModulo" class="textbox-n" type="text" onfocus="(this.type='date')" onblur="(this.type='text')"/>
                        <input value="<%= moduleData.fecha_final%>" placeholder="Fecha de finalizacion" name="fechaFinalModulo" class="textbox-n" type="text" onfocus="(this.type='date')" onblur="(this.type='text')"/>
                    </div>
                    <button class="claseButton" type="submit">Editar</button>
                </form>
            </div>
            <h2>Agregar clases/video a <%= moduleData.nombre_modulo%></h2>
            <div class="contenedorForm">
                <form action="/dashboard/module-edit/<%=moduleData.id%>/class-create" method="POST">
                        <input type="text" name="nombreClase" placeholder="Ingrese numero de clase o video">
                        <textarea cols="50" rows="5" placeholder="Enliste los temas de la clase o video" name="descripcionClase"></textarea>
                        <p>Los siguientes campos se mostraran dentro del campus</p>
                        <input placeholder="Fecha" name="fechaClase" class="textbox-n" type="text" onfocus="(this.type='date')" onblur="(this.type='text')"/>
                        <div>
                        <div>
                        <input type="text" name="linkClase" placeholder="Link de clase">
                        <input type="text" name="contrasenaClase" placeholder="Contraseña clase">
                        </div>
                        </div>

                    <button class="claseButton" type="submit">Crear</button>
                </form>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>NOMBRE</th>
                        <th>FECHA CLASE</th>
                        <th>LINK CLASE</th>
                        <th>CONTRASEÑA CLASE</th>
                        <th>MODIFICAR</th>
                    </tr>
                </thead>
                    <tbody>    
                        <% if(!(moduleData.classes[0])){%>
                            <tr>
                                <td colspan="5">Este modulo no tiene clases</td>
                            </tr>
                        <% }else{%>
                            <% for(let classData of moduleData.classes){%>
                            <tr>
                                <td><%= classData.nombre_clase%></td>
                                <td><%= classData.fecha%></td>
                                <td><%= classData.link_clase%></td>
                                <td><%= classData.contrasena_clase%></td>
                                <td><a href="/dashboard/class-edit/<%=classData.id%>"><i class="fas fa-pencil-alt"></i></a><a href="/dashboard/class-edit/<%=classData.id%>/delete"><i class="fas fa-trash-alt"></i></a></i></td>
                            </tr>
                            <% }%>
                        <% } %>
                    </tbody>
            </table>
        </div>
    </div>
    
</body>
</html>